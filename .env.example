# Core Environment Variables
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
PORT=3000

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
# (Optional) If not using service role
SUPABASE_ANON_KEY=your_anon_key

# Optional future variables
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
LOG_LEVEL=info

# ---------------- Added Runtime / Workers ----------------
EXECUTION_MODE=simulation           # 'simulation' or 'onchain'
DEV_SKIP_WALLET_VERIFY=0            # 1 to bypass wallet verification for development
ONCHAIN_RECON_INTERVAL_MS=300000    # Trader seq reconciliation interval (ms) default 5m
RECON_EXEC_INTERVAL_MS=30000        # Execution event reconciliation worker interval (ms)
TRADE_EXECUTOR_INTERVAL_MS=15000    # Trade executor polling interval (ms)

# ---------------- Database (Direct Connection) ----------------
SUPABASE_DB_URL=postgres://user:pass@host:5432/dbname   # Direct Postgres URL (preferred for scripts)
DATABASE_URL=                                           # Optional alias/fallback

# ---------------- Aptos / On-Chain ----------------
MODULE_ADDRESS=0x...                # Primary published module account (takes precedence)
APTOS_MODULE_ADDRESS=               # Legacy module address env (fallback)
APTOS_ACCOUNT_ADDRESS=              # Fallback account address
APTOS_PRIVATE_KEY=0x...             # Ed25519 private key hex (no spaces)
VAULT_EVENT_V2=1                    # 1 to emit vault_v2::TradeExecutedV2 events

# ---------------- Mock / Simulation Features ----------------
MOCK_SLIPPAGE=0                     # 1 enables mock slippage injection into executions
MOCK_SLIPPAGE_BPS=                  # Fixed slippage bps if set; else random 0-50 when MOCK_SLIPPAGE=1

# ---------------- Testing Helpers ----------------
TEST_TRADER_ID=                     # Trader ID used by test scripts (optional)
TEST_APTOS_TRADER=0x1               # Default test aptos trader address

# ---------------- Supabase (Existing) ----------------
# SUPABASE_URL, SUPABASE_SERVICE_ROLE_KEY, SUPABASE_ANON_KEY already defined above.

# ---------------- Future / Placeholder ----------------
